    <script>
        // Product data
        const products = [
            {
                id: 1,
                name: "Classic White High-Tops",
                price: 89.99,
                image: "https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/d026b5d9-e124-4c7a-96b4-00d0880a0459.png",
                alt: "Clean white canvas high-top sneakers with black laces and rubber soles standing upright on a wooden floor showcasing timeless casual design and versatility for everyday wear"
            },
            {
                id: 2,
                name: "Running Performance Sneakers",
                price: 129.99,
                image: "https://placehold.co/300x300",
                alt: "Futuristic athletic sneakers with mesh upper, neon green accents, and cushioned midsole designed for optimal performance, speed, and comfort during intense running sessions on urban streets"
            },
            {
                id: 3,
                name: "Retro Style Loafers",
                price: 79.99,
                image: "https://placehold.co/300x300",
                alt: "Vintage-inspired loafers with patent leather finish, tassel details, and low-profile design blending retro aesthetics with modern comfort for stylish semi-formal occasions"
            },
            {
                id: 4,
                name: "Basketball Icon Shoes",
                price: 149.99,
                image: "https://placehold.co/300x300",
                alt: "Professional basketball sneakers with high ankle support, cushioning technology, and vibrant blue-and-red color scheme representing peak performance and durability on the hardwood court"
            },
            {
                id: 5,
                name: "Casual Canvas Slip-Ons",
                price: 59.99,
                image: "https://placehold.co/300x300",
                alt: "Effortless slip-on sneakers made from soft canvas with elastic side panels, low heel, and minimalist design perfect for relaxed summer days and casual outings in coastal environments"
            },
            {
                id: 6,
                name: "Premium Leather Boots",
                price: 159.99,
                image: "https://placehold.co/300x300",
                alt: "Luxury brown leather ankle boots with brass zippers, textured sole, and lugged design offering rugged style and protection for both urban adventures and outdoor explorations"
            },
            {
                id: 7,
                name: "Fashion Statement Pumpkins",
                price: 99.99,
                image: "https://placehold.co/300x300",
                alt: "Bold platform sneakers with pumpkin accents, metallic gold laces, and chunky design making a fashion-forward statement with 90s-inspired vibes and elevated height for trendy runway looks"
            },
            {
                id: 8,
                name: "Adventure Trail Shoes",
                price: 109.99,
                image: "https://placehold.co/300x300",
                alt: "Rugged outdoor sneakers with waterproof upper, reinforced toe cap, and traction sole featuring earthy tones for hiking tough terrains and exploring natural trails with confidence and stability"
            }
        ];

        // DOM elements
        const productsContainer = document.getElementById('products-container');
        const cartModal = document.getElementById('cart-modal');
        const cartItems = document.getElementById('cart-items');
        const cartTotal = document.getElementById('cart-total');
        const cartCount = document.getElementById('cart-count');
        const cartToggle = document.getElementById('cart-toggle');
        const closeCart = document.getElementById('close-cart');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileNav = document.getElementById('mobile-nav');

        // Cart state
        let cart = [];

        // Render products
        function renderProducts() {
            productsContainer.innerHTML = '';
            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card bg-white rounded-lg overflow-hidden shadow-md';
                productCard.innerHTML = `
                    <div class="h-64 overflow-hidden">
                        <img src="${product.image}" alt="${product.alt}" class="w-full h-full object-cover">
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold mb-2">${product.name}</h3>
                        <p class="text-gray-600 mb-4">$${product.price.toFixed(2)}</p>
                        <button onclick="addToCart(${product.id})" class="w-full bg-purple-600 text-white py-2 px-4 rounded hover:bg-purple-700 transition">Add to Cart</button>
                    </div>
                `;
                productsContainer.appendChild(productCard);
            });
        }

        // Add to cart
        function addToCart(id) {
            const product = products.find(p => p.id === id);
            const existingItem = cart.find(item => item.id === id);
            if (existingItem) {
                existingItem.quantity++;
            } else {
                cart.push({ ...product, quantity: 1 });
            }
            updateCartUI();
        }

        // Update cart UI
        function updateCartUI() {
            cartItems.innerHTML = '';
            let total = 0;
            cart.forEach(item => {
                total += item.price * item.quantity;
                cartItems.innerHTML += `
                    <div class="cart-item flex justify-between items-center py-2 border-b">
                        <div>
                            <h4 class="font-semibold">${item.name}</h4>
                            <p>$${item.price} x ${item.quantity}</p>
                        </div>
                        <button onclick="removeFromCart(${item.id})" class="text-red-500 hover:text-red-700">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                `;
            });
            cartTotal.textContent = total.toFixed(2);
            cartCount.textContent = cart.reduce((sum, item) => sum + item.quantity, 0);
        }

        // Remove from cart
        function removeFromCart(id) {
            const index = cart.findIndex(item => item.id === id);
            if (index !== -1) {
                cart.splice(index, 1);
                updateCartUI();
            }
        }

        // Event listeners
        cartToggle.addEventListener('click', () => cartModal.classList.remove('hidden'));
        closeCart.addEventListener('click', () => cartModal.classList.add('hidden'));
        cartModal.addEventListener('click', (e) => {
            if (e.target === cartModal) cartModal.classList.add('hidden');
        });
        mobileMenu.addEventListener('click', () => mobileNav.classList.toggle('hidden'));

        // Initialize
        renderProducts();
        updateCartUI();
    </script>
</body>
